{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "mocha"],
    "declaration": true
  },
  "lib": ["es6, es2015"],
  "exclude": ["./node_modules/", "./dist/", "./tests/"],
  "include": ["src"]
}
